---
const fetchYojijyukugoData = async () => {
  const response = await fetch("http://localhost:3000/api/yojijyukugo.json");
  const data = await response.json();
  return data.data.join('');
};

const body = await fetchYojijyukugoData();
---

<div class=".card">
	<p>{body}</p>
</div>

<style>
	.card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: white;
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 2px 2px 2px 0px rgba(0, 0, 0, 0.2) inset, 0px 2px 10px -2px rgba(0, 0, 0, 0.8) inset;
		border: transparent 4px solid;
	}

	.card > p {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}

</style>
